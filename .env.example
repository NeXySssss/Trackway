# Trackway runtime environment example

# App config source
CONFIG_PATH=/app/config.json
TRACKWAY_CONFIG_JSON=
TRACKWAY_CONFIG_JSON_B64=

# Storage backend
STORAGE_DRIVER=sqlite

# SQLite settings (used when STORAGE_DRIVER=sqlite)
SQLITE_PATH=/data/trackway.db
SQLITE_RETENTION_DAYS=5
SQLITE_BUSY_TIMEOUT_MS=5000
SQLITE_MAX_OPEN_CONNS=1
SQLITE_MAX_IDLE_CONNS=1

# Dashboard bind settings (docker-compose)
TRACKWAY_BIND_IP=127.0.0.1
TRACKWAY_BIND_PORT=8083
